
{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 300,
  "background": "rgba(0, 0, 0, 0)",
  "data": {
    "url": "https://raw.githubusercontent.com/dlnphng/a2-data-viz/main/data/top5.csv",
    "format": {
      "type": "csv"
    }
  },
  "params": [
    {
      "name": "yearSlider",
      "value": 2022,
      "bind": {
        "input": "range",
        "min": 2018,
        "max": 2022,
        "step": 1,
        "name": "Year "
      }
    }
  ],
  "transform": [
    {
      "filter": "datum.Year == yearSlider"
    }
  ],
  "layer": [
    {
      "mark": {
        "type": "rule",
        "strokeWidth": 30,
        "tooltip": true
      },
      "encoding": {
        "x": {
          "field": "Total",
          "type": "quantitative",
          "axis": {"title": "Total Revenue (million $)",
          "titleColor":"white",
          "titleFontSize": 15,
          "titleFont": "Outfit",
          "labelColor": "white",
          "labelFont": "Outfit",
          "labelFontSize": 12}
        },
        "y": {
          "field": "Country",
          "type": "nominal",
          "sort": {"field": "Total", "order": "descending"},
          "axis": {"title": null,
          "labelColor": "white",
          "labelFont": "Outfit",
          "labelFontSize": 15}
        },
        "color": {
          "condition": {
            "test": "datum.Country === 'Australia'",
            "value": "#fff9b0"
          },
          "value": "gray"
        },
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Total", "type": "quantitative", "title": "Total Revenue (million $)"},
          {"field": "Percentage", "type": "quantitative", "title": "% of Total Minerals Revenue"}
        ]
      }
    },
    {
      "mark": {"type": "image", "width": 30, "height": 30, "align": "center", "baseline": "middle"},
      "encoding": {
        "x": {
          "field": "Total",
          "type": "quantitative"
        },
        "y": {
          "field": "Country",
          "type": "nominal",
          "sort": {"field": "Country", "order": "descending"}
        },
        "url": {"field": "Flag"},
        "tooltip": [
          {"field": "Country", "type": "nominal", "title": "Country"},
          {"field": "Total", "type": "quantitative", "title": "Total Revenue (million $)"},
          {"field": "Percentage", "type": "quantitative", "title": "% of Total Minerals Revenue"}
        ]
      }
    }
  ]
}
