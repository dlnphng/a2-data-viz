{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "data": {
      "url": "https://raw.githubusercontent.com/dlnphng/a2-data-viz/main/data/top5.csv",
      "format": {
        "type": "csv"
      }
    },
    "transform": [
      {
        "calculate": "toNumber(datum.Total)",
        "as": "Total"
      }
    ],
    "layer": [
      {
        "mark": {
          "type": "rule",
          "strokeWidth": 30,
          "tooltip": true
        },
        "encoding": {
          "x": {
            "field": "Total",
            "type": "quantitative",
            "axis": {"title": "Total Value"}
          },
          "y": {
            "field": "Country",
            "type": "nominal",
            "sort": {"field": "Total", "order": "descending"},
            "axis": {"title": "Country"}
          },
          "color": {
            "condition": {
              "test": "datum.Country === 'Australia'",
              "value": "red"
            },
            "value": "gray"
          },
          "tooltip": [
            {"field": "Country", "type": "nominal", "title": "Country"},
            {"field": "Total", "type": "quantitative", "title": "Total Value"}
          ]
        }
      },
      {
        "mark": {"type": "image", "width": 30, "height": 30, "align": "center", "baseline": "middle"},
        "encoding": {
          "x": {
            "field": "Total",
            "type": "quantitative"
          },
          "y": {
            "field": "Country",
            "type": "nominal",
            "sort": {"field": "Total", "order": "descending"}
          },
          "url": {"field": "Flag"},
          "tooltip": [
            {"field": "Country", "type": "nominal", "title": "Country"},
            {"field": "Total", "type": "quantitative", "title": "Total Value"}
          ]
        }
      }
    ]
  }
  