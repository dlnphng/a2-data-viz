{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "background": "rgba(0, 0, 0, 0)",
    "data": {
      "url": "https://raw.githubusercontent.com/dlnphng/a2-data-viz/main/data/filtered_data.csv",
      "format": {"type": "csv"}
    },
    "params": [
      {
        "name": "regionFilter",
        "value": "All",
        "bind": {
          "input": "select",
          "options": ["All", "NSW", "VIC", "QLD", "SA", "WA", "TAS", "Northen Territory"],
          "labels": ["All", "NSW", "VIC", "QLD", "SA", "WA", "TAS", "Northern Territory"],
          "name": "Filter by Region: "
        }
      }
    ],
    "transform": [
      {
        "filter": "regionFilter === 'All' || datum.State === regionFilter"
      },
      {"filter": "datum.Year == 2013 || datum.Year == 2017 || datum.Year == 2022"}
    ],
    "layer": [
      {
        "mark": {
          "type": "rule", 
          "color": "white"
        },
        "encoding": {
          "x": {"field": "State", "type": "nominal"},
          "y": {"field": "Total", "aggregate": "min", "type": "quantitative"},
          "y2": {"field": "Total", "aggregate": "max"}
        }
      },
      {
        "mark": {"type": "circle", "filled": true, "size": 200},
        "encoding": {
          "x": {
            "field": "State",
            "type": "nominal",
            "axis": {
              "labelAngle": 0,
              "labelAlign": "center"
            }
          },
          "y": {
            "field": "Total",
            "type": "quantitative",
            "axis": {
              "title": "Exploration Amount ($ million)"  
            }
          },
          "color": {
            "field": "Year",
            "type": "nominal",
            "scale": {
              "domain": [2022, 2017, 2013],
              "range": ["#fff9b0", "grey", "lightyellow"]
            },
            "legend": {"title": "Year"}
          },
          "tooltip": [
            {"field": "State", "type": "nominal", "title": "Region"},
            {"field": "Total", "type": "quantitative", "title": "Exploration Amount ($ million)"},
            {"field": "Year", "type": "ordinal", "title": "Year"}
          ]
        }
      }
    ]
  }
  