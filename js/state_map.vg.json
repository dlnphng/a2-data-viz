{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 600,
    "data": {
      "url": "https://raw.githubusercontent.com/dlnphng/a2-data-viz/main/js/aus_state.topojson",
      "format": {
        "type": "topojson",
        "feature": "STE_2021_AUST_GDA2020" 
      }
    },
    "layer": [
      {
        "mark": {
          "type": "geoshape",
          "fill": "#ddd",
          "stroke": "black"
        },
        "projection": {
          "type": "mercator"
        }
      },
      {
        "data": {
          "url": "https://raw.githubusercontent.com/dlnphng/a2-data-viz/main/data/state.csv"
        },
        "mark": {
          "type": "circle",
          "color": "red",
          "opacity": 0.7
        },
        "encoding": {
          "longitude": {
            "field": "Longitude",
            "type": "quantitative"
          },
          "latitude": {
            "field": "Latitude",
            "type": "quantitative"
          },
          "size": {
            "field": "Total",
            "type": "quantitative",
            "scale": {
              "range": [100, 1000]
            }
          },
          "tooltip": [
            {"field": "Region", "type": "nominal"},
            {"field": "Total", "type": "quantitative"}
          ]
        }
      }
    ]
  }
  