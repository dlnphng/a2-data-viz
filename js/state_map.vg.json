{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 420,
  "height": 400,
  "background": "rgba(0, 0, 0, 0)",
  "title": {
    "text": "Mining Exploration by State (million $)",
    "anchor": "middle",
    "dy": -10,
    "font": "Outfit",
    "color": "white"
  },
  "params": [
    {
      "name": "regionFilter",
      "value": "All",
      "bind": {
        "input": "select",
        "options": [
          "All", "NSW", "VIC", "QLD", "SA", "WA", "TAS", "Northern Territory"
        ],
        "name": "Filter by Region: "
      }
    },
    {
      "name": "center_to",
      "value": [134.8505, -28.5183],
      "expr": "regionFilter === 'All' ? [134.8505, -28.5183] : regionFilter === 'NSW' ? [146.9150, -32.7357] : regionFilter === 'VIC' ? [144.9631, -37.8136] : regionFilter === 'QLD' ? [147.6204, -20.9176] : regionFilter === 'SA' ? [134.4910, -30.0002] : regionFilter === 'WA' ? [121.6283, -25.3444] : regionFilter === 'TAS' ? [146.3159, -42.0457] : [133.7751, -19.4914]"
    }
  ],
  "projection": {
    "type": "mercator",
    "center": {"expr": "center_to"},
    "scale": {
      "expr": "regionFilter === 'All' ? 550 : 1000"
    }
  },
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/dlnphng/a2-data-viz/main/js/aus_state.topojson",
        "format": { "type": "topojson", "feature": "collection" }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "black"
      },
      "encoding": {
        "color": {
          "condition": {
            "test": "regionFilter !== 'All' && datum.properties.STATE_NAME === regionFilter",
            "value": "lightgray"
          },
          "value": "white"
        }
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/dlnphng/a2-data-viz/main/data/state.csv"
      },
      "layer": [
        {
          "mark": {
            "type": "circle",
            "color": "#fff9b0",
            "opacity": 0.7,
            "tooltip": {"content": "data"}
          },
          "encoding": {
            "longitude": { "field": "Longitude", "type": "quantitative" },
            "latitude": { "field": "Latitude", "type": "quantitative" },
            "size": {
              "field": "Total",
              "type": "quantitative",
              "scale": { "range": [100, 5000] },
              "legend": {
                "title": "Total Value (million $)",
                "orient": "right",
                "labelColor": "white",
                "titleColor": "white",
                "labelFont": "Outfit",
                "titleFont": "Outfit"
              }
            },
            "tooltip": [
              { "field": "Region", "type": "nominal", "title": "State" },
              { "field": "Total", "type": "quantitative", "title": "Total Value (million $)" }
            ]
          }
        },
        {
          "mark": {
            "type": "text",
            "font": "sans-serif",
            "fontSize": 12,
            "align": "center"
          },
          "encoding": {
            "longitude": { "field": "Longitude", "type": "quantitative" },
            "latitude": { "field": "Latitude", "type": "quantitative" },
            "text": { "field": "Region", "type": "nominal" },
            "tooltip": [
              { "field": "Region", "type": "nominal", "title": "State" },
              { "field": "Total", "type": "quantitative", "title": "Total Value" }
            ]
          }
        }
      ]
    }
  ],
  "view": { "stroke": null }
}
